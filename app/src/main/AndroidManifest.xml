<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.library">

    <uses-permission android:name=" android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BookProgramList"></activity>
        <activity android:name=".Activity_Login" />
        <activity android:name=".Admin.AddCustomerAccounts" />
        <activity android:name=".Admin.AddEmployeeAccount" />
        <activity android:name=".Admin.AddAuthors" />
        <activity
            android:name=".Admin.MoreBooks"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Admin.PublishingCompany" />
        <activity android:name=".AdminActivity" />
        <activity android:name=".BookInformation" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>